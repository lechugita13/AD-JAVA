<odoo>
    <data>

        <record model="ir.ui.view" id="game.player_list">
            <field name="name">player list</field>
            <field name="model">game.player</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="planetes"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="game.player_form">
            <field name="name">player form</field>
            <field name="model">game.player</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="planetes"/>
                            <field name="resources"/>
                            <button name="reset_player" type="object" string="Reset" class="oe_highlight"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="game.player_action_window">
            <field name="name">Players</field>
            <field name="res_model">game.player</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record model="ir.ui.view" id="game.planets_list">
            <field name="name">planets list</field>
            <field name="model">game.planets</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="player"/>

                    <field name="resources"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="game.planets_form">
            <field name="name">palnets form</field>
            <field name="model">game.planets</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="player"/>

                            <field name="resources"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="game.planets_action_window">
            <field name="name">PLANETS</field>
            <field name="res_model">game.planets</field>
            <field name="view_mode">tree,form</field>
        </record>


        <record model="ir.ui.view" id="game.resource_list">
            <field name="name">resource list</field>
            <field name="model">game.resource</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="productions"/>
                    <field name="planets"/>
                    <field name="template"/>
                    <field name="level"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="game.resource_form">
            <field name="name">resource form</field>
            <field name="model">game.resource</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="image"/>
                            <field name="name"/>
                            <field name="productions"/>
                            <field name="planets"/>
                            <field name="template"/>
                            <field name="level"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="game.resource_action_window">
            <field name="name">RESOURCE</field>
            <field name="res_model">game.resource</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record model="ir.ui.view" id="game.raw_list">
            <field name="name">raw list</field>
            <field name="model">game.raw</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="name"/>
                    <field name="metal"/>
                    <field name="cristal"/>
                    <field name="hidrazina"/>
                    <field name="materiaOscura"/>
                    <field name="energia"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="game.raw_form">
            <field name="name">raw form</field>
            <field name="model">game.raw</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="image"/>
                            <field name="name"/>
                            <field name="metal"/>
                            <field name="cristal"/>
                            <field name="hidrazina"/>
                            <field name="materiaOscura"/>
                            <field name="energia"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="game.raw_action_window">
            <field name="name">RAW</field>
            <field name="res_model">game.raw</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem name="Game" id="game.menu_root"/>

        <!-- menu categories -->

        <menuitem name="Dios y Creador" id="game.menu_1" parent="game.menu_root"/>

        <!-- actions -->

        <menuitem name="Players" id="game.menu_1_list" parent="game.menu_1"
                  action="game.player_action_window"/>
        <menuitem name="Planets" id="game.menu_2_list" parent="game.menu_1"
                  action="game.planets_action_window"/>
        <menuitem name="Resource" id="game.menu_3_list" parent="game.menu_1"
                  action="game.resource_action_window"/>
        <menuitem name="Raw" id="game.menu_5_list" parent="game.menu_1"
                  action="game.raw_action_window"/>
    </data>
</odoo>